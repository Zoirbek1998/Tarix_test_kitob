<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".QuizActivity.SplashActivity">

    <ImageView
        android:id="@+id/examImage"
        android:layout_width="@dimen/size_300dp"
        android:layout_height="@dimen/size_200dp"
        android:layout_marginStart="@dimen/size_50dp"
        android:layout_marginTop="@dimen/size_220dp"
        android:layout_marginEnd="@dimen/size_50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_logo" />

    <TextView
        android:id="@+id/examText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20dp"
        android:fontFamily="@font/lobster"
        android:text="Exampl Practic"
        android:textSize="@dimen/text_30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/examImage" />
</androidx.constraintlayout.widget.ConstraintLayout>