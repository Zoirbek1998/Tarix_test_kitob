<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity.TenActivity"
    android:background="@drawable/menu_backgraund"
    >

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_margin="@dimen/size_30dp"
     >

     <LinearLayout

         android:id="@+id/linearLayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"

         >

         <ImageView
             android:id="@+id/btnImage"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:padding="@dimen/size_10dp"
             android:src="@drawable/ic_baseline_arrow_back_24"

             />
     </LinearLayout>

     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="@dimen/size_140dp"
         android:layout_height="@dimen/size_200dp"
         android:layout_marginTop="30dp"
         android:layout_marginEnd="@dimen/size_130dp"
         android:onClick="reading_jahon"
         android:scaleType="centerCrop"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/linearLayout"
         app:srcCompat="@drawable/on_jahon" />

     <TextView
         android:id="@+id/textView4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="@dimen/size_10dp"
         android:layout_marginTop="30dp"
         android:fontFamily="monospace"
         android:text="Jahon Tarix"
         android:textSize="@dimen/text_22sp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toEndOf="@+id/imageView3"
         app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

     <ImageView
         android:id="@+id/imageView4"
         android:layout_width="@dimen/size_140dp"
         android:layout_height="@dimen/size_200dp"
         android:layout_marginTop="@dimen/size_30dp"
         android:layout_marginEnd="@dimen/size_130dp"
         android:onClick="reading_uzb"
         android:scaleType="centerCrop"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/imageView3"
         app:srcCompat="@drawable/on_ozb" />

     <TextView
         android:id="@+id/textView5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="10dp"
         android:layout_marginTop="@dimen/size_200dp"
         android:fontFamily="monospace"
         android:text="Uzb Tarix"
         android:textSize="@dimen/text_22sp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toEndOf="@+id/imageView4"
         app:layout_constraintTop_toBottomOf="@+id/textView4" />


 </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>